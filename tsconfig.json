{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],

    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "strict": true,
    "strictNullChecks": true
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "ts-node": {
    "files": true,
    "compilerOptions": {
      "esModuleInterop": true
    }
  }
}
